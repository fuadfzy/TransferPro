<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Player Details - <%= choosenPlayer.name %></title>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      color: #333;
      line-height: 1.6;
    }

    h1 {
      color: #2c3e50;
      text-align: center;
    }

    .container {
      width: 80%;
      margin: auto;
      padding: 20px;
    }

    /* Navbar Styles */
    .navbar {
      background-color: #2c3e50;
      padding: 15px 0;
    }

    .navbar-container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .navbar a {
      text-decoration: none;
      color: #fff;
      font-weight: bold;
      font-size: 1.2em;
    }

    .navbar-links {
      list-style: none;
      display: flex;
    }

    .navbar-links li {
      margin-left: 20px;
    }

    .navbar-links li a {
      color: #fff;
      font-size: 1.1em;
    }

    .navbar-links li a:hover {
      color: #e74c3c;
    }

    .sub-navbar {
      background-color: #34495e;
      padding: 10px 0;
    }

    .sub-navbar-container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    .sub-navbar-links {
      list-style: none;
      display: flex;
      justify-content: center;
    }

    .sub-navbar-links li {
      margin: 0 20px;
    }

    .sub-navbar-links li a {
      text-decoration: none;
      color: #fff;
      font-size: 1.1em;
      font-weight: bold;
    }

    .sub-navbar-links li a:hover {
      color: #e74c3c;
    }

    /* Page Content */
    .main-content {
      padding: 40px 0;
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      margin-top: 20px;
    }

    .page-title {
      font-size: 2em;
      color: #2c3e50;
      margin-bottom: 20px;
    }

    /* Table Styles */
    .club-list {
      width: 100%;
      border-collapse: collapse;
    }

    .club-list th,
    .club-list td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    .club-list th {
      background-color: #34495e;
      color: #fff;
    }

    .club-list tr:nth-child(even) {
      background-color: #ecf0f1;
    }

    .club-list tr:hover {
      background-color: #e74c3c;
      color: white;
    }

    /* Footer Styles */
    footer {
      background-color: #34495e;
      padding: 20px 0;
      text-align: center;
      color: #fff;
      margin-top: auto;
    }

    footer p {
      font-size: 1em;
    }

    /* Perubahan untuk layout Flexbox */
    .player-details-container {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 40px;
    margin-top: 20px;
    max-width: 1200px; /* Membatasi lebar kontainer */
    margin: auto; /* Center konten secara horizontal */
    }

    .player-details {
    flex: 0 1 45%; /* Membatasi lebar biodata menjadi 45% dari kontainer */
    background-color: #fff;
    padding: 20px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 600px; /* Membatasi lebar maksimal biodata */
    }

    /* Canvas style: Set width and height */
    canvas {
      width: 500px;
      height: 400px;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <header>
    <nav class="navbar">
      <div class="navbar-container">
        <a href="/" class="brand">TransferPro</a>
        <ul class="navbar-links">
          <li><a href="/">Home</a></li>
        </ul>
      </div>
    </nav>
  </header>

  <nav class="sub-navbar">
    <div class="sub-navbar-container">
      <ul class="sub-navbar-links">
        <li><a href="/players">All Players</a></li>
        <li><a href="/clubs/<%= choosenPlayer.ClubId %>">Back to <%= choosenPlayer.club.clubName %></a></li>
      </ul>
    </div>
  </nav>

  <div class="main-content">
    <div class="container">
      <h1 class="page-title">Player Details: <%= choosenPlayer.name %></h1>

      <div class="player-details-container">
        <!-- Player Details Section -->
        <div class="player-details">
          <h2>Club: <%= choosenPlayer.club.clubName %></h2>
          <h3>Position:
            <% choosenPlayer.positions.forEach(position => { %>
            <li><%= position.positionName %> </li>
            <% }) %>
          </h3>

          <div class="player-stats">
            <div>
              <h3>Goals</h3>
              <p><%= choosenPlayer.goals %></p>
            </div>
            <div>
              <h3>Assists</h3>
              <p><%= choosenPlayer.assists %></p>
            </div>
            <div>
              <h3>Shot On Target</h3>
              <p><%= choosenPlayer.shotOnTarget %></p>
            </div>
            <div>
              <h3>Successful Tackles</h3>
              <p><%= choosenPlayer.successfulTackles %></p>
            </div>
            <div>
              <h3>Fouls Committed</h3>
              <p><%= choosenPlayer.foulsComitted %></p>
            </div>
          </div>
        </div>

        <!-- Radar Chart Section -->
        <div>
          <h3>Player Statistics (Radar Chart)</h3>
          <canvas id="playerRadarChart"></canvas>
        </div>
      </div>
    </div>
  </div>

  <footer>
    <p>&copy; 2025 TransferPro | All Rights Reserved</p>
  </footer>

  <script>
    const ctx = document.getElementById('playerRadarChart').getContext('2d');
    const playerRadarChart = new Chart(ctx, {
      type: 'radar',
      data: {
        labels: ['Goals', 'Assists', 'Shot On Target', 'Successful Tackles', 'Fouls Committed'],
        datasets: [{
          label: '<%= choosenPlayer.name %> Performance',
          data: [
            <%= choosenPlayer.goals %>,
            <%= choosenPlayer.assists %>,
            <%= choosenPlayer.shotOnTarget %>,
            <%= choosenPlayer.successfulTackles %>,
            <%= choosenPlayer.foulsComitted %>
          ],
          fill: true,
          backgroundColor: 'rgba(231, 76, 60, 0.2)',
          borderColor: 'rgba(231, 76, 60, 1)',
          borderWidth: 1
        }]
      },
      options: {
        responsive: false,
        aspectRatio: 1,
        scales: {
          r: {
            suggestedMin: 0,
            suggestedMax: 10
          }
        }
      }
    });
  </script>
</body>

</html>
